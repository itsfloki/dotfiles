env:
  TERM: xterm-256color

window:
  padding:
    x: 6
    y: 6
  dynamic_padding: false
  title: Alacritty
  dimensions:
    columns: 110
    lines: 33
  class:
    instance: Alacritty
    general: Alacritty

scrolling:
  history: 5000

font:
  normal:
    # family: CaskaydiaCove Nerd Font
    # family: FiraCode Nerd Font
    # family: UbuntuMono Nerd Font
    family: Hack Nerd Font
    # family: Monospace
    style: Regular

  bold:
    #family: Agave Nerd Font
    family: Hack Nerd Font
    style: Bold

  italic:
    #family: Agave Nerd Font
    family: Hack Nerd Font
    style: Italic

  bold_italic:
    #family: Agave Nerd Font
    family: Hack Nerd Font
    style: Bold Italic

  size: 8

  offset:
    x: 0
    y: 1

# TokyoNight Alacritty Colors
colors:
  # Default colors
  primary:
    background: '#282c34'
    foreground: '#abb2bf'

  # Normal colors
  normal:
    # NOTE: Use '#131613' for the `black` color if you'd like to see
    # black text on the background.
    black: '#282c34'
    red: '#e06c75'
    green: '#98c379'
    yellow: '#d19a66'
    blue: '#61afef'
    magenta: '#c678dd'
    cyan: '#56b6c2'
    white: '#abb2bf'

  # Bright colors
  bright:
    black: '#5c6370'
    red: '#e06c75'
    green: '#98c379'
    yellow: '#d19a66'
    blue: '#61afef'
    magenta: '#c678dd'
    cyan: '#56b6c2'
    white: '#ffffff'
theme: One-Dark
