env:
  TERM: xterm-256color

window:
  padding:
    x: 6
    y: 6
  dynamic_padding: false
  title: Alacritty
  dimensions:
    columns: 110
    lines: 33
  class:
    instance: Alacritty
    general: Alacritty

scrolling:
  history: 5000

font:
  normal:
    # family: CaskaydiaCove Nerd Font
    # family: FiraCode Nerd Font
    # family: UbuntuMono Nerd Font
    family: Hack Nerd Font
    # family: Monospace
    style: Regular

  bold:
    #family: Agave Nerd Font
    family: Hack Nerd Font
    style: Bold

  italic:
    #family: Agave Nerd Font
    family: Hack Nerd Font
    style: Italic

  bold_italic:
    #family: Agave Nerd Font
    family: Hack Nerd Font
    style: Bold Italic

  size: 8

  offset:
    x: 0
    y: 1

# TokyoNight Alacritty Colors
colors:
  # Default colors
  primary:
    # hard contrast: background = '#1d2021'
    background: '#282828'
    # soft contrast: background = '#32302f'
    foreground: '#ebdbb2'

  # Normal colors
  normal:
    black: '#282828'
    red: '#cc241d'
    green: '#98971a'
    yellow: '#d79921'
    blue: '#458588'
    magenta: '#b16286'
    cyan: '#689d6a'
    white: '#a89984'

  # Bright colors
  bright:
    black: '#928374'
    red: '#fb4934'
    green: '#b8bb26'
    yellow: '#fabd2f'
    blue: '#83a598'
    magenta: '#d3869b'
    cyan: '#8ec07c'
    white: '#ebdbb2'
theme: Gruvbox-Dark
