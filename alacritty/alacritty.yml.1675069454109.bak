env:
  TERM: xterm-256color

window:
  padding:
    x: 6
    y: 6
  dynamic_padding: false
  opacity: 1.0
  title: Alacritty
  class:
    instance: Alacritty
    general: Alacritty

scrolling:
  history: 5000

font:
  normal:
    family: FiraCode Nerd Font
    style: Regular

  bold:
    family: FiraCode Nerd Font
    style: Bold

  italic:
    family: FiraCode Nerd Font
    style: Italic

  bold_italic:
    family: FiraCode Nerd Font
    style: Bold Italic

  size: 12.0

  offset:
    x: 0
    y: 1
colors:
  # Default colors
  primary:
    background: '#000000'
    foreground: '#b6b6b6'

  # Normal colors
  normal:
    black: '#000000'
    red: '#990000'
    green: '#00a600'
    yellow: '#999900'
    blue: '#0000b2'
    magenta: '#b200b2'
    cyan: '#00a6b2'
    white: '#bfbfbf'

  # Bright colors
  bright:
    black: '#666666'
    red: '#e50000'
    green: '#00d900'
    yellow: '#e5e500'
    blue: '#0000ff'
    magenta: '#e500e5'
    cyan: '#00e5e5'
    white: '#e5e5e5'
theme: Terminal-app
